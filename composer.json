{
  "name": "djaiss/organizationos",
  "type": "project",
  "description": "An open source application to manage remote organizations.",
  "keywords": [
    "laravel",
    "framework"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "bacon/bacon-qr-code": "^3.0",
    "laravel/framework": "^11.9",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.9",
    "livewire/livewire": "^3.5",
    "mallardduck/blade-lucide-icons": "^1.23",
    "masmerise/livewire-toaster": "^2.3",
    "pragmarx/google2fa": "^8.0"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.13",
    "brianium/paratest": "^7.7",
    "fakerphp/faker": "^1.23",
    "knuckleswtf/scribe": "^4.37",
    "larastan/larastan": "^2.9",
    "laravel/breeze": "^2.1",
    "laravel/dusk": "^8.2",
    "laravel/pint": "^1.13",
    "laravel/sail": "^1.26",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.0",
    "phpunit/phpunit": "^11.0.1",
    "rector/rector": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "test": [
      "@organizationos:rector",
      "@organizationos:unit",
      "@organizationos:static"
    ],
    "precommit": [
      "@organizationos:test",
      "@organizationos:lint",
      "@organizationos:docs",
      "@organizationos:prettier"
    ],
    "organizationos:docs": "php artisan scribe:generate",
    "organizationos:lint": "./vendor/bin/pint",
    "organizationos:prettier": "npx prettier --write resources/",
    "organizationos:rector": "./vendor/bin/rector",
    "organizationos:static": "./vendor/bin/phpstan analyse --memory-limit=256M",
    "organizationos:unit": "php artisan migrate:fresh --database=testing && ./vendor/bin/phpunit",
    "organizationos:update": "composer update && bun update && bun upgrade"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
